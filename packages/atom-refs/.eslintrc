parserOptions:
  ecmaVersion: 2019 # svelte
  sourceType: module # svelte

env:
  jasmine: true
  es6: true # svelte
  browser: true # svelte

globals:
  atom: true
  # expect: true
  # fdescribe: true
  # fit: true
  # runs: true

rules:
  # prettier freeze IDE on some files here (only through eslint though)
  prettier/prettier: false
